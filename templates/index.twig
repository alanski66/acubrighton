{% extends "_layouts/generic-page-layout.twig" %}

{% block content %}

<section class="d-none hero   position-relative">
  <div class="container hero-image">
  <div class="overlay">
    <h1>Hero Image With Overlay</h1>
    <p>A full width background image built with HTML & CSS.</p>
  </div>
</div>
</section>
<section class="bg-white d-flex">
  <div class="container">
    
    <div class="row flex-sm-row-reverse align-items-center align-items-md-end align-items-lg-center">
     
   
      <div class="col  col-md-6 col-lg-6">
        
        {% set asset = entry.image.eagerly().one() %}
        <!-- mobile only -->
        {% set words =  entry.words |split(',') %}
        
        <div class="col d-block d-md-none text-center pt-4 pb-4">{{ words[0]}}&nbsp;<span class='d-inline text-primary'>&nbsp;//&nbsp;</span> {{words[1]}}</div>

        <img src="{{baseUrl}}/assets/images/rebecca-trans-250x250.png" class="d-block d-md-none mx-auto img-fluid rounded-circle bg-primary" alt="Picture of Miguel Lopez Sanchez" 
        width="200" height="200" />

        <div class="col d-block d-md-none text-center pt-4">{{ words[2]}} <span class='d-inline text-primary'>&nbsp;//&nbsp;</span> {{words[3]}}</div>

        <img src="{{asset.url}}" class="d-none d-md-block mx-lg-auto img-fluid" alt="Picture of Miguel Lopez Sanchez" width=" {{asset.width}}"
          height=" {{asset.height}}" loading="lazy">
      </div>
      <div class="2nd col-12  col-md-6 col-lg-6 justify-content-start pb-5">
        <div class="col-12 d-non d-flex mx-auto fs-6">
          {{ entry.words |replace({',': "<span class='d-inline text-primary'>&nbsp;//&nbsp; </span>" })|raw }}
        </div>
        {# <div class="col-12 d-none d-lg-block d-flex mx-auto fs-6">
          {{ entry.words |replace({',': "<span class='d-inline text-primary'>&nbsp;//&nbsp;</span>" })|raw }}
        </div> #}
        <h1 class="d-flex justify-content-start  text-start fw-semibold text-body-emphasis lh-2 my-5">
          {{entry.heroheadline}}
        </h1>

        <div class="d-grid gap-2 d-md-flex justify-content-md-start">
          <a href="{{entry.heroButtonLink.one().url}}" class="btn btn-primary btn-lg px-4 me-md-2 mb-2">
            {{entry.heroButtonText}}</a>

        </div>

      </div>
    </div>
  </div>
</section>

{% include('_partials/cat-cards') %}



{% endblock %}